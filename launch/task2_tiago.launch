  <launch>

    <node pkg="iri_erl_task2_client" type="iri_erl_task2_client" name="iri_erl_task2_client" output="screen">
        <remap from ="iri_erl_person_classifier/front_cam_info" to="/roah_ipcam/cam_info"/>
	<remap from="~/task_2_client/tts_module/tts" to="/tts"/>
   <remap from="~/task_2_client/nav_module/move_waypoint"
             to="/pal_waypoint/navigate"/>
    <remap from="~/task_2_client/nav_module/odom"
             to="/mobile_base_controller/odom"/>
    <remap from="~/task_2_client/nav_module/clear_costmaps"
             to="/move_base/clear_costmaps"/>
    <remap from="~/task_2_client/nav_module/change_map"
             to="/pal_map_manager/change_map"/>
    <remap from="~/task_2_client/nav_module/set_op_mode"
             to="/pal_navigation_sm"/>
    <remap from="~/task_2_client/nav_module/move_base_reconf"
             to="/move_base/PalLocalPlanner/set_parameters"/>

   
    </node>
    <arg name = "base_path" default = "/home/lfreixas/iri-lab/labrobotica/algorithms/task2-welcoming_visitors_alg/"/>
    <node pkg="iri_erl_person_classifier" type="iri_erl_person_classifier" name="iri_erl_person_classifier" output="screen">
        <remap from ="iri_erl_person_classifier/front_door_camera" to="/xtion/rgb/image_raw"/>
        <remap from ="iri_erl_person_classifier/front_cam_info" to="/xtion/rgb/cam_info"/>
        <param name="base_path" type="string" value="$(arg base_path)" />

    </node>
    <node pkg="image_view" type="image_view" name="image_view">
       <remap from="image" to="/xtion/rgb/image_raw" />
    </node>

 <!-- launch dynamic reconfigure -->
 <node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure" respawn="false" output="screen"/>

</launch>
